{
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitThis": false,
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "pretty": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true
    // "typeRoots": ["@types", "node_modules/@types"],
    // "types": ["node", "jest"]
  }
}
